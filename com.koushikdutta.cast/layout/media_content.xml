<?xml version="1.0" encoding="utf-8"?>
<com.koushikdutta.boilerplate.ScrollingToolbarLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/scrolling_toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.viewpager.widget.ViewPager
                        android:id="@+id/pager"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                <LinearLayout
                        android:id="@+id/footer_container"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>

        </LinearLayout>


        <LinearLayout
                android:elevation="10dp"
                android:background="?attr/colorPrimary"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                        android:background="?attr/colorPrimaryDark"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/icon_list_drawer_activity_statusbar_height" />

                <androidx.appcompat.widget.Toolbar
                        app:title="@string/app_name"
                        android:id="@+id/toolbar"
                        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        />

                <com.astuetz.PagerSlidingTabStrip
                        app:pstsShouldExpand="true"
                        android:id="@+id/tabs"
                        app:pstsIndicatorColor="@color/colorAccent"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:background="?attr/colorPrimary"
                        app:pstsTextColorSelected="@android:color/white"
                        android:textColor="#96FFFFFF"/>

        </LinearLayout>

</com.koushikdutta.boilerplate.ScrollingToolbarLayout>
