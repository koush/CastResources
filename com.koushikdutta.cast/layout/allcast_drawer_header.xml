<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

    <com.koushikdutta.boilerplate.ResizableImageView
            android:id="@+id/drawer_art"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <LinearLayout
            android:id="@+id/allcast_drawer_header_clickable"
            android:layout_gravity="bottom"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/allcast_device"
                style="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_gravity="left|center"
                    android:text="@string/connected"
                    style="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <FrameLayout
                    android:layout_gravity="right|center"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content">

                <com.koushikdutta.boilerplate.tint.TintedImageView
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_drop_down"
                        app:drawableFilterMode="inverse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
            </FrameLayout>
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
            android:layout_marginTop="48dp"
            android:layout_marginRight="16dp"
            android:layout_gravity="right"
            android:layout_width="48dp"
            android:layout_height="wrap_content">

        <com.koushikdutta.boilerplate.tint.TintedImageView
                android:layout_gravity="center"
                android:id="@+id/settings"
                android:src="@drawable/ic_settings"
                app:drawableFilterMode="inverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
    </FrameLayout>
</FrameLayout>
