<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <FrameLayout
            android:id="@+id/google"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

        <com.koushikdutta.boilerplate.tint.TintedImageView
                app:stateListFilter="colorFilter"
                android:src="@drawable/ic_action_play"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/boilerplate_list_item_layout_horizontalMargin"
                android:layout_width="20dp"
                android:layout_height="20dp"/>

        <LinearLayout
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/boilerplate_list_item_second_column_horizontalMargin"
                android:layout_width="wrap_content"
                android:layout_height="72dp">

            <com.koushikdutta.boilerplate.tint.TintedTextView
                    android:text="@string/buy_premium"
                    android:gravity="center_vertical"
                    style="@style/TextAppearance.AppCompat.Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <com.koushikdutta.boilerplate.tint.TintedTextView
                    android:text="Google Play"
                    android:gravity="center_vertical"
                    style="@style/TextAppearance.AppCompat.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
            android:id="@+id/amazon"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

        <com.koushikdutta.boilerplate.tint.TintedImageView
                app:stateListFilter="colorFilter"
                android:src="@drawable/ic_action_amazon"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/boilerplate_list_item_layout_horizontalMargin"
                android:layout_width="20dp"
                android:layout_height="20dp"/>

        <LinearLayout
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/boilerplate_list_item_second_column_horizontalMargin"
                android:layout_width="wrap_content"
                android:layout_height="72dp">

            <com.koushikdutta.boilerplate.tint.TintedTextView
                    android:text="@string/buy_premium"
                    android:gravity="center_vertical"
                    style="@style/TextAppearance.AppCompat.Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <com.koushikdutta.boilerplate.tint.TintedTextView
                    android:text="Amazon App Store"
                    android:gravity="center_vertical"
                    style="@style/TextAppearance.AppCompat.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>