<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_marginTop="8dp"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:paddingLeft="16dp"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:paddingBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_launcher"/>

            <TextView
                    android:paddingLeft="8dp"
                    android:layout_gravity="center_vertical"
                    style="@style/NotificationTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/now_playing"
                    />

        </LinearLayout>

        <TextView
                style="@style/NotificationLine2"
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:drawable/divider_horizontal_dark"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageButton
                android:tint="@color/notification_color_mask"
                style="?android:attr/buttonBarButtonStyle"
                android:id="@+id/stop"
                android:src="@drawable/ic_action_av_stop"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1" />

        <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:drawable/divider_horizontal_dark"/>

        <ImageButton
                android:tint="@color/notification_color_mask"
                style="?android:attr/buttonBarButtonStyle"
                android:id="@+id/playback_toggle"
                android:src="@drawable/ic_action_av_pause"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                />

        <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:drawable/divider_horizontal_dark"/>


        <ImageButton
                android:tint="@color/notification_color_mask"
                style="?android:attr/buttonBarButtonStyle"
                android:id="@+id/replay"
                android:src="@drawable/ic_action_av_replay"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                />
    </LinearLayout>
</LinearLayout>
