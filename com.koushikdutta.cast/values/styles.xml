<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CastTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorPrimary">#61615E</item>
        <item name="android:textColorPrimaryInverse">@android:color/white</item>
        <item name="android:selectableItemBackground">@drawable/selectable_item_background_compat</item>
    </style>

    <style name="CastTheme.Mint">
        <item name="colorAccent">@color/colorAccentControls</item>
    </style>

    <style name="CastAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccentControls</item>
        <item name="android:textColorPrimary">#61615E</item>
        <item name="android:textColorPrimaryInverse">@android:color/white</item>
    </style>

    <style name="CastTheme.PortraitItem">
        <item name="ratio">1.5</item>
    </style>

    <style name="CastTheme.Slideshow">
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>
